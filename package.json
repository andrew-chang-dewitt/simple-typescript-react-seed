{
  "name": "simple-typescript-react-seed",
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --config .prettierrc.yaml --write './(*.html|*.js|*.json|src/**/*.ts|src/**/*.tsx)'",
    "test": "mocha",
    "coverage": "nyc npm run test",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run format && npm run coverage",
    "build": "webpack --env.production",
    "dev": "webpack-dev-server --no-inline --open"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text"
    ],
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "**/dist/**",
      "webpack.config.js",
      "**/*.spec.ts",
      "**/*.spec.tsx"
    ]
  },
  "mocha": {
    "extension": [
      "ts",
      "tsx"
    ],
    "spec": [
      "src/**/*.spec.tsx",
      "src/**/*.spec.ts"
    ],
    "require": "ts-node/register"
  },
  "author": "Andrew Chang-DeWitt",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/mocha": "^7.0.2",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.2.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "html-webpack-plugin": "^4.4.1",
    "ignore-styles": "^5.0.1",
    "mini-css-extract-plugin": "^0.11.0",
    "mocha": "^10.2.0",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.2",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
